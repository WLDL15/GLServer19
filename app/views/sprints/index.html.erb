
<div class="navbar navbar-expand shadow-sm">
  <ul class="nav">
    <li class="navbar-text"><b>スプリントリスト</b></li>
  </ul>
  <ul class="nav ml-auto">
    <li class="nav-item">
      <%= link_to new_project_sprint_path(@project), class: 'btn btn-primary' do %>
        <%= icon("fas","plus") %>
        スプリントの追加
      <% end %>
    </li>
  </ul>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th width="5%">No</th>
            <th width="15%">開始日</th>
            <th width="15%">終了日</th>
            <th width="55%">スプリントゴール</th>
            <th width="5%">SBL</th>
            <th width="5%">詳細</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @sprints) do |sprint| %>
            <td><%= sprint.no %></td>
            <td><%= sprint.start.to_s(:default) %></td>
            <td><%= sprint.end.to_s(:default) %></td>
            <td><%= sprint.description %></td>
            <td><%= link_to '', sbl_path(sprint.id), class: "btn btn-primary btn-lg fa fa-list fa-lg" %></td>
            <td><%= link_to '', sprint, class: 'btn btn-primary btn-lg fa fa-search fa-lg' %></td>
      <% end %>
    </tbody>
  </table>
</div>
