<div class="page-header">
  <%= link_to new_project_sprint_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Version
  <% end %>
  <h1>Listing versions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Goal</th>
            <th>Start</th>
            <th>End</th>
            <th>Level</th>
            <th>Project</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @versions) do |version| %>
            <td><%= version.name %></td>
            <td><%= version.goal %></td>
            <td><%= version.start %></td>
            <td><%= version.end %></td>
            <td><%= version.level %></td>
            <td><%= version.project %></td>
            <td><%= link_to 'Show', version %></td>
        <td><%= link_to 'Edit', edit_version_path(version) %></td>
        <td><%= link_to 'Destroy', version, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
