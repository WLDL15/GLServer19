<div class="row pt-3">
  <div class="col-10">
    <table style="table-layout:fixed;" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th style="width:1px;"></th>
          <th style="width:300px;" class="text-center">説明</th>
          <th style="width:50px;" class="text-center">完了日時</th>
          <th style="width:50px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @alpha_state.alpha_items.each do |state_item| %>
          <tr style="height:75px;">
            <% if state_item.alpha_evidence.completed %>
              <td class="px-4 pt-4"><%= icon("far fa-lg","check-square") %></td>
            <% else %>
              <td class="px-4 pt-4"><%= icon("far fa-lg","square") %></td>
            <% end %>
            <td><%= state_item.ddescription %></td>
            <td class="text-center"><%= print_date(state_item.completed_at) %></td>
            <td><%= link_to "根拠を書く", edit_alpha_item_alpha_evidence_path(state_item), class:'my-2 btn btn-primary btn-block btn-sm' %></td>
          <tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

