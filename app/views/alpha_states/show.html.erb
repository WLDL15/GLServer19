<!-- 状態のボタン -->
<div class="row pl-2">
  <% @alpha_alpha.alpha_states.each_with_index do |alpha_state, index| %>
    <div class="col-2">
      <% if index+1 == params[:id].to_i %>
        <%= link_to alpha_state.dname, alpha_state_path(alpha_state), class: 'btn btn-primary btn-block' %>
      <% else %>
        <%= link_to alpha_state.dname, alpha_state_path(alpha_state), class: 'btn btn-outline-primary btn-block' %>
      <% end %>
    </div>
  <% end %>
</div>

