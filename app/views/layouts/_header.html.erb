<header class="navbar navbar-expand-lg fixed-top navbar-dark d-print text-white bg-dark" role="navigation" id="header">
  <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <% if logged_in? %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle text-white" data-toggle="dropdown"><%= get_project_name %></a>
          <div class="dropdown-menu" id="menu-project">
            <%= link_to "すべてのプロジェクト", projects_path, class: "dropdown-item" %>
            <%= link_to new_project_path, class: 'dropdown-item' do %>
              <%= icon("fas", "plus") %>プロジェクト
            <% end %>
            <% if Project.exists? %>
            <div class="dropdown-divider"></div>
            <% end %>
            <% all_project.each do |project| %>
              <%= link_to project.name, project_path(project), class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav mx-auto">
        <li class="navbar-brand h2 mb-0 text-white">
          <%= t("application") %>
        </li>
      </ul>

      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle text-white" data-toggle="dropdown"><%= current_user.name %></a>
          <div class="dropdown-menu dropdown-menu-right" id="menu-user">
            
            <%= link_to "プロジェクト一覧",  projects_path, class: "dropdown-item" %>
            <%= link_to "プロフィールの編集",  current_user, class: "dropdown-item" %>
            <%= link_to "ユーザ一覧", users_path, class: "dropdown-item" %>
            <%= link_to "設定", "#", class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "ログアウト", logout_path, class: "dropdown-item", method: "delete", data: { confirm: "本当にログアウトしますか？" } %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to help_path, class: "nav-link text-white" do %>
           <i class="fa fa-question-circle fa-lg mt-0" ></i>
          <% end %>
        </li>
      </ul>
    <% else %>
      <ul class="navbar-nav mx-auto">
        <li class="navbar-brand h2 mb-0 text-white">
          <%= t("application") %>
        </li>
      </ul>

      <%= link_to help_path, class: "nav-link text-light" do %>
        <i class="fa fa-question-circle fa-lg mt-0" ></i>
      <% end %>

    <% end %>
  </div>
</header>
