<div class="row px-3 shadow-sm">

  <div class="col-6">
    <b>プロジェクト一覧</b>
  </div>
  <div class="col-6 ml-auto">
      <%= link_to new_project_path, class: 'link' do %>
        <%= icon("fas","plus") %>
        プロジェクト
      <% end %>
  </div>
</div>

<div class="row px-3">
  <div class="container table-responsive mt-3">
    <table class="table table-striped table-bordered table-hover" id="ichiran">
      <thead class="text-dark">
        <tr>
          <th scope="col" width="15%">名前</th>
          <th scope="col" width="15%">開始日</th>
          <th scope="col" width="15%">終了日</th>
          <th scope="col" width="15%">スプリント長</th>
          <th scope="col" width="40%">プロジェクト概要</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td scope="row"><%= link_to project.name, project %></td>
            <td scope="row"><%= print_date(project.start) %></td>
            <td scope="row"><%= print_date(project.end) %></td>
            <td scope="row" class="text-right"><%= project.length %></td>
            <td scope="row"><%= project.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>